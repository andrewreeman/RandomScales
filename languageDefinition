EXPRESSION = EXERCISE_TYPE:EXERCISE_EXPRESSION

EXERCISE_TYPE = "scale"|"arpeggio"

EXERCISE_EXPRESSION = SCALE_EXPRESSION|ARPEGGIO_EXPRESSION

SCALE_EXPRESSION = KEY_EXPRESSION:TONALITY_EXPRESSION:STYLE_EXPRESSION|SCALE_EXPRESSION,SCALE_EXPRESSION|

COLLECTION_EXPRESSION<T> = "*"|"*SPECIFIC_EXPRESSION<T>"|SPECIFIC_EXPRESSION<T>
SPECIFIC_EXPRESSION<T> = T|!T|T,T

KEY_EXPRESSION = COLLECTION_EXPRESSION<KEY>
KEY = "KEY_NAME"|"KEY_NAME""KEY_MODIFIER"
KEY_NAME = "a"|"b"|"c"|"d"|"e"|"f"|"g"
KEY_MODIFIER = "#"|"b"

TONALITY_EXPRESSION = COLLECTION_EXPRESSION<TONALITY>
TONALITY = "major"|"minor"|...

STYLE_EXPRESSION = COLLECTION_EXPRESSION<STYLE>
STYLE = STYLE_NAME|"STYLE_NAME""HANDS"
STYLE_NAME = COLLECTION_EXPRESSION<"[1-4] octave"|"russian">
HANDS = COLLECTION_EXPRESSION<"left hand|right hand|hands together">

# future:
#STYLE = STYLE_NAME:HANDS:GROUPING:SPEED
STYLE_NAME = COLLECTION_EXPRESSION<"[1-4] octave"|"russian">
HANDS = COLLECTION_EXPRESSION<"left hand|right hand|hands together">

## N/N == 2/3 == 2 against 3 == quaver in one hand and triplet in other
## if left hand or right hand then non-playing hand tap on lap
#GROUPING = COLLECTION_EXPRESSION<"swung"|"[2-4]|[1-7]/[1-7]">

#SPEED = COLLECTION_EXPRESSION<"fast"|"medium"|"slow"|"TEMPO">
#TEMPO = COLLECTION_EXPRESSION<[40-160] "bpm">

ARPEGGIO = KEY_EXPRESSION:ARPEGGIO_TONALITY_EXPRESSION:STYLE_EXPRESSION

ARPEGGIO_TONALITY_EXPRESSION = COLLECTION_EXPRESSION<ARPEGGIO_TONALITY>
ARPEGGIO_TONALITY = "major"|"minor 7th"|...






