<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Random scale"
        android:id="@+id/randScale"
        android:onClick="generateScale"
        android:layout_alignTop="@+id/randArp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Random Arpeggio"
        android:id="@+id/randArp"
        android:onClick="generateArpeggio"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/randResult"
        android:text=""
        android:layout_centerInParent="true"
        android:layout_below="@+id/randScale" />

</RelativeLayout>
